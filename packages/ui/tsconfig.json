{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "lib": ["esnext", "dom"],
      "types": ["vitest/globals"]
    },
    "exclude": ["node_modules"],
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "scripts/**/*.ts",
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
  }